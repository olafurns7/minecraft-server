{
  "name": "minecraft-server",
  "version": "0.0.0",
  "description": "Alchemy Typescript Project",
  "type": "module",
  "scripts": {
    "build": "bun ./docker_src/build.ts && bun run build:mcp-components && bun build:worker",
    "build:worker": "tsc -b",
    "build:mcp-components": "bun run src/mcp-components/build-all.ts",
    "build:offline": "MINEFLARE_OFFLINE=true bun run build",
    "configure": "alchemy configure",
    "version": "alchemy --version",
    "login": "alchemy login",
    "predeploy": "mkdir -p dist/client && find dist/client -mindepth 1 ! -name '*.png' -delete",
    "deploy": "touch .env && NODE_ENV=production alchemy deploy --env-file .env",
    "destroy": "touch .env && NODE_ENV=production alchemy destroy --env-file .env",
    "dev": "touch .env && NODE_ENV=development alchemy dev --env-file .env",
    "dev:spa": "vite"
  },
  "devDependencies": {
    "@cloudflare/containers": "^0.0.28",
    "@cloudflare/workers-types": "4.20250926.0",
    "@types/node": "^24.5.2",
    "@types/bun": "^1.3.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.0",
    "alchemy": "0.75.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "^1.0.0",
    "@libsql/client": "^0.15.15",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@preact/signals": "^2.3.1",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "agents": "^0.2.9",
    "drizzle-orm": "^0.44.5",
    "elysia": "^1.4.9",
    "preact": "^10.19.0",
    "zod": "^3.25.76"
  },
  "overrides": {
    "zod": "^3.25.76"
  }
}
